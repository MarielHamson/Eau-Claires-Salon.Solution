@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model HairSalon.Models.Stylist

<h3> @Html.DisplayFor(model => model.StylistName)</h3>

@if (@Model.Clients.Count == 0)
{
  <p> No clients have been added yet!</p>
}

<ul>
  @foreach (Client client in @Model.Clients)
  {
    <li> @Html.ActionLink($"{client.ClientName}", "Details", new { id = client.ClientId })</li>
  }
</ul>
<div class="banner_btn">
@Html.ActionLink("Add new client", "Create", "Clients", null, new { @class="btn_2"})
@Html.ActionLink("Edit stylist", "Edit", new { id = Model.StylistId }, new { @class="btn_2"}) <br> <br>
@Html.ActionLink("Delete stylist", "Delete", new { id = Model.StylistId }, new { @class="btn_2"})
</div>